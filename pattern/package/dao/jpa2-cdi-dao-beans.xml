  <class name="${pattern.property.product.keyword}RootBean" visibility="public" abstract="true">
    <generic>T</generic>
    <attribute name="persistentClass" visibility="private" access="rw">
        <datatype><![CDATA[Class<T>]]></datatype>
    </attribute>
